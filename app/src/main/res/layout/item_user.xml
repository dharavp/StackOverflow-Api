<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_user"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorUserText"
            android:text="hiiii"
            android:textStyle="bold"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_reputation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:layout_marginRight="15dp"
                android:textStyle="bold"
                android:textSize="@dimen/badge_text_size" />

            <TextView
                android:id="@+id/text_bronze"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/badge_bronze"
                android:layout_marginRight="10dp"
                android:drawablePadding="@dimen/badge_drawable_padding"
                android:gravity="center"
                android:textColor="@color/colorCountText"
                android:textSize="@dimen/badge_text_size" />

            <TextView
                android:id="@+id/text_silver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/badge_silver"
                android:layout_marginRight="10dp"
                android:drawablePadding="@dimen/badge_drawable_padding"
                android:gravity="center"
                android:textColor="@color/colorCountText"
                android:textSize="@dimen/badge_text_size" />

            <TextView
                android:id="@+id/text_gold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/badge_gold"
                android:drawablePadding="@dimen/badge_drawable_padding"
                android:gravity="center"
                android:textColor="@color/colorCountText"
                android:textSize="@dimen/badge_text_size" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>


